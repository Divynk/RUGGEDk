  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
    integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer" />

  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <script src="https://kit.fontawesome.com/72fdfa8245.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/main_navbar.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/productPage.css">
  <link rel="stylesheet" href="/css/loginform.css">
  <!-- <script src="/public/js"></script> -->
  <script src="/public/js/productPage.js"></script>
  <title>
    <%=title %> >
  </title>
</head>

<body>
  <div class='bold-line'></div>
  <div class='container'>
    <div class='window'>
      <div class='overlay'></div>
      <div class='content'>
        <div class='welcome'>
          <div class="loader">
            <span>L</span>
            <span>o</span>
            <span>g</span>
            <span>i</span>
            <span>n</span>
          </div>
        </div>
        <form action="/login" method="post">
          <div class='subtitle'>Welcome to Rugged</div>
          <div class='input-fields'>
            <input type='email' name="email" placeholder='Email' class='input-line full-width'>
            <input type='password' name="password" placeholder='Password' class='input-line full-width'>

          </div>
          <div class="highlight"><span><i class="fa-brands fa-facebook"></i></span>
            <span class='highlight'><i class="fa-brands fa-linkedin"></i></span>
            <span class='highlight'><i class="fa-brands fa-google-plus-g"></i></span>

          </div>
          <button type="submit" class='ghost-round full-width mg'>Login</button>
        </form>
        <br>
        <br>
        <div class="btn btn-danger disabled" style="background-color: red;">
          <%=data%>
        </div>
      </div>
    </div>

  </div>
  </div>
</body>

</html>
